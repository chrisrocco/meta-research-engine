{
  "name": "bigdata-server",
  "description": "The RESTful web service for UAB's Big Data project",
  "keywords": [
    "bigdata",
    "arangodb",
    "slim",
    "php",
    "UAB"
  ],
  "homepage": "http://github.com/chrisrocco/bigdata-server",
  "license": "MIT",
  "authors": [
    {
      "name": "Chris Rocco",
      "email": "chris.rocco7@gmail.com",
      "homepage": "http://chrisroc.co"
    },
    {
      "name": "Caleb Falcione",
      "email": "caleb.falcione@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "slim/slim": "^3.1",
    "monolog/monolog": "^1.17",
    "tuupola/slim-jwt-auth": "^2.3",
    "triagens/arangodb": "^3.1",
    "phpmailer/phpmailer": "^5.2"
  },
  "require-dev": {
    "phpunit/phpunit": ">=4.8 < 6.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "autoload": {
    "psr-4": {
      "Models\\Core\\": "models/core",
      "Models\\Edges\\": "models/edges",
      "Models\\Vertices\\": "models/vertices",
      "Encodings\\" : "lib/encodings",
      "DB\\": "data/",
      "DB\\Queries\\": "data/queries",
      "Email\\": "lib/email/",
      "SlimRequestHandler\\": "lib/api"
    }
  },
  "scripts": {
    "start":              "php -S localhost:8080 -t public public/index.php",
    "test":               "phpunit",
    "test-connection":    "phpunit tests/unit/database/ConnectionTest.php",
    "test-quick":         "phpunit tests/QuickTest.php",
    "db-init":            "php data/scripts/db-init.php",
    "db-truncate":        "php data/scripts/db-truncate.php"
  }
}
